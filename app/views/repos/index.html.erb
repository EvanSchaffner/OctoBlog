<% replace :page_header do %>
    <h1><%=link_to @user.name, user_repos_path(@user) %></h1>
<% end %>
<% replace :main_content do %>
    <% if @repos.count > 0 %>
        <%= render partial: "repo", :collection => @repos %>
    <% else %>
        <p>There is no repositories yet.</p>
    <% end %>
<% end %>
