<h2>
<% if current_user == user %>
    Your
<% else %>
    <h2><%=user.username %>'s
<% end %>
<%= "Repository".pluralize(user.repos.count) %>
</h2>

    <div class="list-group">
        <% if current_user == user %>
            <%= link_to new_user_repo_path(@user),
                class: "list-group-item" do %>
                <%= fa_icon "plus" %> New repository
            <% end %>
        <% end %>
        <% if @user.repos.count > 0 %>
            <% @user.repos.each do |repo| %>
                <%= link_to repo.name, user_repo_posts_path(@user, repo),
                    class: "list-group-item" %>
            <% end %>
        <% end %>

    </div>
