<% replace :page_header do %>
    <%= image_tag @user.avatar_url, size: "100", class: "img-thumbnail" %>
    Hello, <%= @user.name %>
<% end %>
<% replace :main_content do %>

    <h2>News Feed</h2>
    <%= render partial: "posts/post", collection: @posts %>

<% end %>
<% replace :sidebar do %>
    <h2>Your Repos</h2>
    <div class="list-group">
        <% @user.repos.each do |repo| %>
            <%= link_to repo.name, user_repo_posts_path(@user, repo),
                class: "list-group-item" %>
        <% end %>
    </div>
<% end %>

